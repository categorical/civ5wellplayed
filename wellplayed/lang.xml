<?xml version="1.0" encoding="utf-8"?>

<GameData>
    <Languages>
        <Update>
            <Set>
				<!--
				default FontWidthScale is 0.4
				default FontName is "MS PGothic"
				see Civ5LocalizationDatabaseSchema.sql
				-->
                <!--Uses English as game language and supports keying in traditional Chinese characters.-->
                <!--Does not work if loaded as mod.-->
                <!--The following 4 lines need to be appended to English.xml before game starts.-->
                <UseExtendedFont>1</UseExtendedFont>
                <FontName>SimSun</FontName>
                <FontWidthScale>0.4</FontWidthScale>
                <FontHeightScale>0.75</FontHeightScale>
            </Set>
            <Where>
                <ID>0</ID>
                <Type>en_US</Type>
            </Where>
        </Update>
    </Languages>

</GameData>
